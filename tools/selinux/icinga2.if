########################################
## <summary>
##	Execute TEMPLATE in the icinga2 domin.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`icinga2_domtrans',`
	gen_require(`
		type icinga2_t, icinga2_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, icinga2_exec_t, icinga2_t)
')

